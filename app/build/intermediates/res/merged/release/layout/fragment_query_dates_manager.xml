<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout_container_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_galaxy"
    tools:context="com.kutsubogeras.shifts.QueryDatesManager$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_ofWork_duration"
                style="@style/BackgroundButtonsStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="50dp"
                android:text="Πρωϊνές Βάρδιες"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="24sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textView_ItemResult_WeekDay"
                style="@style/LabelRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxWidth="150dp"
                android:minHeight="40dp"
                android:minWidth="150dp"
                android:paddingLeft="5dp"
                android:text="@string/Start_Date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView_Query_StartDate"
                style="@style/TextFieldStyleForQueryDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center"
                android:maxWidth="120dp"
                android:minHeight="40dp"
                android:minWidth="120dp"
                android:text="@string/button_presh_here"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Color_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView_ExtraRepo_SumTake"
                style="@style/LabelRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxWidth="150dp"
                android:minHeight="40dp"
                android:minWidth="150dp"
                android:paddingLeft="5dp"
                android:text="@string/End_Date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView_QueryEndDate"
                style="@style/TextFieldStyleForQueryDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center"
                android:maxWidth="120dp"
                android:minHeight="40dp"
                android:minWidth="120dp"
                android:text="@string/button_presh_here"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Color_Orange" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView_ofWork_TypeOfWork"
                style="@style/LabelRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxWidth="150dp"
                android:minHeight="40dp"
                android:minWidth="150dp"
                android:paddingLeft="5dp"
                android:text="@string/label_total_shifts"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView_Query_Results"
                style="@style/TextFieldForShowShiftsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center"
                android:maxWidth="120dp"
                android:minHeight="40dp"
                android:minWidth="120dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Color_dark_blue"
                android:textStyle="bold" />

        </LinearLayout>

        <ListView
            android:id="@+id/listView_QueryFragment_Shifts"
            style="@style/ListShiftsStyleWithStroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp" >

        </ListView>

    </LinearLayout>

    <LinearLayout
        style="@style/BackgroundButtonsStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center|end"
        android:layout_marginBottom="2dp"
        android:minHeight="55dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_QueryDatesManager_Back"
            style="@style/MyShiftAddDatesButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shift_add_dates_button_background"
            android:minWidth="95dp"
            android:text="@string/Button_Back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </LinearLayout>

        <Button
            android:id="@+id/button_QueryDatesManager_OK"
            style="@style/MyShiftOKButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shift_ok_button_background"
            android:minWidth="90dp"
            android:text="@string/Button_OK" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </LinearLayout>

        <Button
            android:id="@+id/button_QueryDatesManager_Reset"
            style="@style/MyShiftResetButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/shift_reset_button_background"
            android:minWidth="90dp"
            android:text="@string/Button_Delete" />

    </LinearLayout>

</FrameLayout>
