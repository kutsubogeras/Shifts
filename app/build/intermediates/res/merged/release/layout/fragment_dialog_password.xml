<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogPasswordEnder"
    style="@style/CalendarRoundedButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:minHeight="140dp"
    android:orientation="vertical"
    android:paddingTop="2dp" >

    <TextView
        android:id="@+id/textView_WrongPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_wrong_pass"
        android:textColor="@color/Color_Red"
        android:visibility="invisible"
        android:minHeight="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="100dp">

        <LinearLayout
            android:id="@+id/LinearLayout_EnderUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:minHeight="35dp"
            android:gravity="center_vertical"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/LabelUserName"
                style="@style/LayoutRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:maxHeight="30dp"
                android:maxWidth="120dp"
                android:minHeight="30dp"
                android:minWidth="120dp"
                android:paddingLeft="3dp"
                android:paddingRight="2dp"
                android:text="@string/label_user_name"
                android:textColor="@color/Color_Table_Start"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_User"
                style="@style/TextFieldAddShiftsFormStyle"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_gravity="center_vertical|center"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical|center_horizontal"
                android:maxHeight="30dp"
                android:maxWidth="90dp"
                android:minHeight="30dp"
                android:minWidth="75dp"
                android:paddingLeft="3dp"
                android:paddingRight="2dp"
                android:textColor="@color/Color_green_blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:enabled="true"
                android:editable="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_EnderPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:minHeight="35dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/LabelPassword"
                style="@style/LayoutRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:maxHeight="30dp"
                android:maxWidth="120dp"
                android:minHeight="30dp"
                android:minWidth="120dp"
                android:paddingLeft="3dp"
                android:paddingRight="2dp"
                android:text="@string/label_user_pass"
                android:textColor="@color/Color_Table_Start"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_Password"
                style="@style/TextFieldAddShiftsFormStyle"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:inputType="textVisiblePassword"
                android:ems="10"
                android:layout_gravity="center_vertical|center"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical|center_horizontal"
                android:maxHeight="30dp"
                android:maxWidth="90dp"
                android:minHeight="30dp"
                android:minWidth="75dp"
                android:paddingLeft="3dp"
                android:paddingRight="2dp"
                android:textColor="@color/Color_green_blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:editable="true"
                android:enabled="true" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>