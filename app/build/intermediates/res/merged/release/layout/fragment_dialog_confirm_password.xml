<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_password"
    style="@style/CalendarRoundedButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:minHeight="80dp"
    android:orientation="vertical"
    android:paddingTop="2dp" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:minHeight="120dp"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/LinearLayout_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:minHeight="75dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/Label_Password"
                style="@style/LayoutRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:maxHeight="30dp"
                android:maxWidth="120dp"
                android:minHeight="30dp"
                android:minWidth="120dp"
                android:paddingLeft="3dp"
                android:paddingRight="2dp"
                android:text="@string/label_user_pass"
                android:textColor="@color/Color_Table_Start"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TextView_Password"
                style="@style/TextFieldAddShiftsFormStyle"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical|center"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical|center_horizontal"
                android:maxHeight="30dp"
                android:maxWidth="100dp"
                android:minHeight="30dp"
                android:minWidth="90dp"
                android:paddingLeft="3dp"
                android:paddingRight="2dp"
                android:textColor="@color/Color_green_blue"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="0.48"
                android:enabled="true"
                android:inputType="textPassword" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>