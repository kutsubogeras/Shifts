<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="3dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/imageView_ImaNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:adjustViewBounds="true"
            android:maxHeight="35dp"
            android:maxWidth="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/num_1" />

        <TextView
            android:id="@+id/textView_offwork_startDate"
            style="@style/TextFieldForShowShiftsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical|center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="80dp"
            android:minHeight="30dp"
            android:minWidth="75dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/Color_deep_skyblue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_offwork_endDate"
            style="@style/TextFieldStyle_WithRedStroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="80dp"
            android:minHeight="30dp"
            android:minWidth="75dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/Color_Orange"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_offwork_days"
            style="@style/TextFieldStyle_WithBlueStroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="35dp"
            android:minHeight="30dp"
            android:minWidth="35dp"
            android:textColor="@color/Color_blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_offwork_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:minHeight="30dp"
            android:minWidth="60dp"
            android:paddingLeft="2dp"
            android:textColor="@color/Color_Dark_Green3"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
