
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
                  xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <CheckBoxPreference
        android:defaultValue="false"
        android:summary="inactive"
        android:key="add_pass"
        android:title="@string/pref_title_header_password" />

    <EditTextPreference
        android:defaultValue=""
        android:inputType="textPassword"
        android:key="user_pass"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_password_prompt"
        android:foregroundGravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:password="true"
        android:dialogMessage="Password needed"
        tools:dialogLayout="@drawable/background_for_list_red_stroke"
        android:id="@+id/user_pass"
        android:textAllCaps="false"
        android:editable="true"/>
</PreferenceScreen>
