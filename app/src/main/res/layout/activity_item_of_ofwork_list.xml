<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/imageView_OfWorkCategoryItem_RowNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textView_OfWorkCategoryItem_Category"
            style="@style/TextFieldForShowShiftsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:maxWidth="140dp"
            android:minHeight="30dp"
            android:minWidth="140dp"
            android:textColor="@color/Color_green_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_OfWorkCategoryItem_DaysTake"
            style="@style/TextFieldStyle_WithRedStroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="30dp"
            android:minWidth="80dp"
            android:textColor="@color/Color_Red"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_OfWorkCategoryItem_Days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/textView_OfWorkCategoryItem_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="82dp"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="30dp"
            android:text="Δικαιούστε"
            android:textColor="@color/Color_Black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView_OfWorkCategoryItem_TotalDays"
            style="@style/TextFieldStyle_WithBlueStroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="30dp"
            android:minWidth="80dp"
            android:textColor="@color/Color_blue"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
