<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_of_results_list_view"
    style="@style/TextFieldRoundedStrokeCornersStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_light_gray"
    android:clickable="false"
    android:minHeight="110dp"
    android:orientation="vertical"
    android:paddingTop="2dp" >

    <LinearLayout
        android:id="@+id/LinearLayout_Row2_Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:minHeight="40dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView_ItemResult_RowNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxHeight="25dp"
            android:maxWidth="25dp"
            android:minHeight="20dp"
            android:minWidth="20dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/TextView_Label_TimeFinish"
            style="@style/TextFieldStyle_WithGreenStroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:gravity="center_vertical"
            android:maxHeight="30dp"
            android:maxWidth="90dp"
            android:minHeight="30dp"
            android:minWidth="75dp"
            android:paddingLeft="3dp"
            android:paddingRight="2dp"
            android:textColor="@color/Color_Orange" />

        <TextView
            android:id="@+id/textView_ItemResult_WeekDay"
            style="@style/TextFieldForShowShiftsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical"
            android:maxHeight="30dp"
            android:maxWidth="88dp"
            android:minHeight="30dp"
            android:minWidth="88dp"
            android:paddingLeft="3dp"
            android:paddingRight="2dp"
            android:textColor="@color/Color_Dark_Green2" />

        <TextView
            android:id="@+id/TextView_Time_Finish_Dialog"
            style="@style/TextFieldStyle_WithBlueStroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_marginLeft="3dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:maxHeight="30dp"
            android:maxWidth="90dp"
            android:minHeight="30dp"
            android:minWidth="75dp"
            android:paddingLeft="3dp"
            android:paddingRight="2dp"
            android:textColor="@color/Color_green_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_Item_results_holiday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textView_Item_results_HolidayName"
            style="@style/TextFieldStyleForHolidayListValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="130dp"
            android:gravity="center_vertical|center_horizontal"
            android:maxWidth="170dp"
            android:minHeight="30dp"
            android:minWidth="85dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/Color_green_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>