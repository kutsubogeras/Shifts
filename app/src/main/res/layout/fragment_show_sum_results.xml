<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout_SumResults"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_galaxy"
    tools:context="com.kutsubogeras.shifts.ShowSumResults$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_SumResults_Title"
                style="@style/BackgroundButtonsStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="24sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textView18"
                style="@style/LabelRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minWidth="145dp"
                android:paddingLeft="2dp"
                android:text="@string/Start_Date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView_SumResults_StartDate"
                style="@style/TextFieldStyleForQueryDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="35dp"
                android:minWidth="110dp"
                android:text="@string/button_presh_here"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Color_blue"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView20"
                style="@style/LabelRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minWidth="145dp"
                android:paddingLeft="2dp"
                android:text="@string/End_Date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView_SumResults_EndDate"
                style="@style/TextFieldStyleForQueryDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="35dp"
                android:minWidth="110dp"
                android:text="@string/button_presh_here"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Color_Orange"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textView_ReportRepo_Title"
                style="@style/LabelRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minWidth="145dp"
                android:paddingLeft="2dp"
                android:text="@string/label_total_shifts"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView_SumResults_SumShifts"
                style="@style/TextFieldAddShiftsFormStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="110dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Color_Black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView_ReportRepo_SumRepo"
                style="@style/LabelRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="145dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/label_sum_results_mornings"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView_SumResults_SumMorning"
                style="@style/TextFieldAddShiftsFormStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="110dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Color_blue"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView_ReportRepo_StartDate"
                style="@style/LabelRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="145dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/label_sum_results_aftenoon"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView_ofWork_TypeOfWork"
                style="@style/TextFieldAddShiftsFormStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="110dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Color_Magenta"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView_ReportRepo_EndDate"
                style="@style/LabelRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="145dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/label_sum_results_nights"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView_SumResults_SumNight"
                style="@style/TextFieldAddShiftsFormStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="110dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Color_Red"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView_OfWorkYear_Rest"
                style="@style/LabelRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="145dp"
                android:text="@string/label_sum_results_days_off"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView_SumResults_SumRepo"
                style="@style/TextFieldAddShiftsFormStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="110dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Color_Dark_Green2"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView_ItemReportRepo_StartDate"
                style="@style/LabelRoundedCornerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="145dp"
                android:text="@string/label_sum_results_sicks"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView_SumResults_SumSicks"
                style="@style/TextFieldAddShiftsFormStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:maxWidth="110dp"
                android:minWidth="110dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/Color_Black" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/BackgroundButtonsStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center|end"
        android:minHeight="55dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_SumResults_Back"
            style="@style/MyShiftAddDatesButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shift_add_dates_button_background"
            android:minWidth="95dp"
            android:text="@string/Button_Back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

        </LinearLayout>

        <Button
            android:id="@+id/button_SumResults_OK"
            style="@style/MyShiftOKButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/shift_ok_button_background"
            android:minWidth="90dp"
            android:text="@string/Button_OK" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

        </LinearLayout>

        <Button
            android:id="@+id/button_SumResults_Reset"
            style="@style/MyShiftResetButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/shift_reset_button_background"
            android:minWidth="87dp"
            android:text="@string/Button_Delete" />

    </LinearLayout>

</FrameLayout>
