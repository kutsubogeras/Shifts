<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/imageView_ItemReportRepo_ImaNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:adjustViewBounds="true"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/num_1" />

        <TextView
            android:id="@+id/textView_OfWorkYear_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Από:"
            android:textColor="@color/Color_Black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_ItemReportRepo_StartDate"
            style="@style/TextFieldForShowShiftsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:gravity="center_vertical|center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="75dp"
            android:minHeight="30dp"
            android:minWidth="75dp"
            android:textColor="@color/Color_deep_skyblue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_OfWorkCategoryItem_DaysTake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:text="Έως:"
            android:textColor="@color/Color_Black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_ItemReportRepo_EndDate"
            style="@style/TextFieldStyle_WithRedStroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:gravity="center_vertical|center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="75dp"
            android:minHeight="30dp"
            android:minWidth="75dp"
            android:textColor="@color/Color_Orange"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_ItemReportRepo_Descript"
            style="@style/TextFieldStyle_WithBlueStroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical|center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="75dp"
            android:minHeight="30dp"
            android:minWidth="75dp"
            android:textColor="@color/Color_blue"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
