<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_of_results_list_view"
    style="@style/TextFieldRoundedStrokeCornersStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_light_gray"
    android:clickable="false"
    android:minHeight="110dp"
    android:orientation="vertical"
    android:paddingTop="2dp" >

    <LinearLayout
        android:id="@+id/LinearLayout_Row2_Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:minHeight="60dp"
        android:minWidth="110dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView_ItemResult_RowNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:maxHeight="25dp"
            android:maxWidth="25dp"
            android:minHeight="25dp"
            android:minWidth="25dp" />

        <TextView
            android:id="@+id/TextView_Time_Finish_Dialog"
            style="@style/TextFieldForShowShiftsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:maxHeight="40dp"
            android:maxWidth="200dp"
            android:minHeight="40dp"
            android:minWidth="200dp"
            android:textColor="@color/Color_green_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView_QueryLink_QueryList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:maxHeight="25dp"
            android:maxWidth="25dp"
            android:minHeight="25dp"
            android:minWidth="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/link_icon" />

    </LinearLayout>

</LinearLayout>