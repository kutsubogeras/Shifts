<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_galaxy"
    android:orientation="vertical"
    tools:context=".MainActivity$AddEmployeeFragment" >

    <LinearLayout
        android:id="@+id/LinearLayout_UserData"
        style="@style/MyRoundedLightDarkLightStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:minHeight="200dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/section_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_weight="3"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="70dp"
                    android:layout_height="82dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/rounded_corners_employee_image"
                    android:maxHeight="85dp"
                    android:maxWidth="70dp"
                    android:minHeight="70dp"
                    android:minWidth="85dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/user_icon_128_128"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/Image_Rotate"
                    style="@style/RotateImageStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="false"
                    android:background="@drawable/rotate_image_background"
                    android:cropToPadding="false"
                    android:maxHeight="60dp"
                    android:maxWidth="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rotate_1" />

            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/LinearLayout_container_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout_row1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/ΤextView1_ListDate"
                        style="@style/LabelShowWorkedRoundedCornerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:maxWidth="105dp"
                        android:minWidth="105dp"
                        android:paddingLeft="5dp"
                        android:text="@string/label_emplo_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editTextName"
                        style="@style/MyRoundedTextField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:enabled="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_horizontal|center"
                        android:inputType="textCapCharacters"
                        android:maxWidth="176dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/Color_blue"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_row2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/ΤextView2_ListWeekday"
                        style="@style/LabelShowWorkedRoundedCornerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:maxWidth="105dp"
                        android:minWidth="105dp"
                        android:paddingLeft="5dp"
                        android:text="@string/label_emplo_lastname"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editTextLastName_show"
                        style="@style/MyRoundedTextField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_horizontal|center"
                        android:inputType="textCapCharacters"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="176dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/Color_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_row3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/ΤextView3_ListShiftValue"
                        style="@style/LabelShowWorkedRoundedCornerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:maxWidth="105dp"
                        android:minWidth="105dp"
                        android:paddingLeft="5dp"
                        android:text="@string/label_emplo_address"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editTextAddress_show"
                        style="@style/MyRoundedTextField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_horizontal|center"
                        android:inputType="textCapCharacters"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="176dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/Color_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_row4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView_OfWork_DaysHaveTake"
                        style="@style/LabelShowWorkedRoundedCornerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:maxWidth="105dp"
                        android:minWidth="105dp"
                        android:paddingLeft="5dp"
                        android:text="@string/label_emplo_phone"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editTextPhone_show"
                        style="@style/MyRoundedTextField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_horizontal|center"
                        android:inputType="phone"
                        android:maxWidth="176dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/Color_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_row5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView_ofWork_duration"
                        style="@style/LabelShowWorkedRoundedCornerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:maxWidth="105dp"
                        android:minWidth="105dp"
                        android:paddingLeft="5dp"
                        android:text="@string/label_emplo_mobile"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editTextMobile_show"
                        style="@style/MyRoundedTextField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_horizontal|center"
                        android:inputType="phone"
                        android:maxWidth="176dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/Color_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_row6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView_OfWork_Restdays"
                        style="@style/LabelShowWorkedRoundedCornerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:maxWidth="105dp"
                        android:minWidth="105dp"
                        android:paddingLeft="5dp"
                        android:text="@string/label_emplo_job"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editTextJob_show"
                        style="@style/MyRoundedTextField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_horizontal|center"
                        android:inputType="textCapCharacters"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="176dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/Color_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_row7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView_Query_Results"
                        style="@style/LabelShowWorkedRoundedCornerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:maxWidth="105dp"
                        android:minWidth="105dp"
                        android:paddingLeft="5dp"
                        android:text="@string/label_emplo_company"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editTextCompany_show"
                        style="@style/MyRoundedTextField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_horizontal|center"
                        android:inputType="textCapCharacters"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="176dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/Color_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_row8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView_ofWork_Year"
                        style="@style/LabelShowWorkedRoundedCornerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:maxWidth="105dp"
                        android:minWidth="105dp"
                        android:paddingLeft="5dp"
                        android:text="@string/label_emplo_departement"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editTextDepart_show"
                        style="@style/MyRoundedTextField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_horizontal|center"
                        android:inputType="textCapCharacters"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="176dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/Color_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_row9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView_ExtraRepo_ExtraRest"
                        style="@style/LabelShowWorkedRoundedCornerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:maxWidth="105dp"
                        android:minWidth="105dp"
                        android:paddingLeft="5dp"
                        android:text="@string/label_emplo_grade"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/editTextGrade_show"
                        style="@style/MyRoundedTextField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_horizontal|center"
                        android:inputType="textCapCharacters"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxWidth="176dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/Color_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>